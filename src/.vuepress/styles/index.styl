// tip,warning,danger容器样式
.custom-block.tip {
    border: 2px solid rgba(55, 95, 201, .9) !important
    background-color: rgba(255, 255, 255, 0) !important
    &:hover {
      box-shadow: 5px 5px 13px rgba(55, 95, 201, .34)
    }
      
}
.custom-block.warning {
    border: 2px solid rgba(235, 112, 46, 0.9) !important
    background-color: rgba(255, 255, 255, 0) !important
    &:hover {
      box-shadow: 5px 5px 13px rgba(235, 112, 46, 0.34) !important
    }
}
.custom-block.danger {
    border: 2px solid rgba(158, 12, 12, 0.9) !important
    background-color: rgba(255, 255, 255, 0) !important
    &:hover {
      box-shadow: 5px 5px 13px rgba(158, 12, 12, .34) !important
    }
}

