.content__default
  ol, ul
    li
      a
        position: relative;
        &:after
          content: "";
          display: block;
          width: 0;
          height: 2px;
          position: absolute;
          left: 0;
          bottom: -2px;
          background: #67cc86;
          transition: all 0.3s ease-in-out;
        &:hover:after
          width: 100%

